---
import PersonalLinks from '../components/PersonalLinks.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Welcome to Said Atrahouch Website.">
	<div class="container">
		<div class="information">
			<h1>Said Atrahouch Echarrouti</h1>
			<h2 class="description">Software Engineer</h2>
			<div class="separator"></div>
			<PersonalLinks />
		</div>
	</div>
</Layout>

<style>
	.container {
		height: 100%;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
	}

	.information {
		display: flex;
		flex-direction: column;
		gap: var(--space-1)
	}

	.description {
		text-align: center;
		font-weight: 300;
	}

	.separator {
		height: 1px;
		width: 100%;
		background-color: gray;
	}
	.links {
		display: flex;
		gap: var(--space-1);
	}
</style>
