	"Typescript",
	"React",
	"NodeJS",
	"Remix",
	"RadixUI",
	"TailwindCSS",
	"Storybook",
	"Playwright",
]

const BackendSkills = [
	"Golang",
	"NodeJS",
	"Kysely",
	"PostgreSQL",
